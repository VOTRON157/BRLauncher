<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../services/css/style.css">
    <link href="../../node_modules/material-icons/iconfont/material-icons.css" rel="stylesheet">
    <title>Launcher Configurações</title>
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>
</head>

<body style="background: url(../assets/wallpaper.jpg) no-repeat; background-size: cover;">

    <header>
        <%- include('partials/topbar.ejs') %>
    </header>
    <main class="flex h-screen justify-center items-center">
        <div class="w-full h-full bg-zinc-600 flex flex-col items-center bg-opacity-50 p-8">
            <div class="mt-3">
                <img src="../assets/BRLauncher.png" width="250">
            </div>
            <div class="bg-zinc-800 w-full gap-y-4 h-full mt-3 bg-opacity-50 shadow p-7 flex flex-col">
                <div class="text-white">
                    <label class="mb-1 w-full flex items-center" for="id"><span
                            class="material-icons mr-1">folder</span>
                        Diretorio</label>
                    <div class="flex gap-2">
                        <input
                            class="w-11/12 outline-none text-zinc-300 bg-transparent border-b-2 border-white focus:border-blue-400 duration-300"
                            type="text" placeholder="Player" id="dir" /><button id="getDir"
                            class="bg-zinc-400 px-3">Navegar</button>
                    </div>
                </div>
                <div class="text-white">
                    <label class="mb-1 w-full flex items-center" for="id"><span
                            class="material-icons mr-1">screenshot_monitor</span> Resolução</label>
                    <div class="flex flex-col gap-y-3">
                        <div class="flex gap-x-3">
                            <input style="text-align: center;"
                                class="w-full outline-none text-zinc-300 bg-transparent border-b-2 border-white focus:border-blue-400 duration-300"
                                type="number" id="largura" required />
                            <p>X</p>
                            <input style="text-align: center;"
                                class="w-full outline-none text-zinc-300 bg-transparent border-b-2 border-white focus:border-blue-400 duration-300"
                                type="number" id="altura" required />
                        </div>
                        <div class="flex items-center gap-x-2">
                            <input id="fullscreen" type="checkbox">
                            <label for="fullscreen">Tela cheia</label>
                        </div>
                    </div>
                </div>
                <div class="text-white">
                    <label class="mb-1 w-full flex items-center" for="id"><span
                            class="material-icons mr-1">folder</span>
                        Alocação de memoria</label>
                    <div class="flex gap-2">
                        <input type="range" id="memory" class="w-full">
                        <input style="text-align: center;"
                            class="w-20 outline-none text-zinc-300 bg-transparent border-b-2 border-white focus:border-blue-400 duration-300"
                            type="number" id="memoryPanel" min="1024" required />
                        <div>MB</div>
                    </div>
                </div>
                <div>
                    <button class="bg-zinc-400 px-3" id="voltar">Voltar</button>
                    <button class="bg-green-400 px-3" id="save">Salvar</button>
                </div>
            </div>
        </div>
    </main>
    <script>var exports = {};</script>
    <script src="../services/bundle.js"></script>
    <span class="text-black"></span>
</body>

</html>